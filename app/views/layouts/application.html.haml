!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title AgriHelp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %header.sticky-top
      %nav.navbar.navbar-expand-lg.navbar-dark{:style => "background-color: #544a2e;"}
        %a.navbar-brand{:href => "/"} Agri help
        %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse.justify-content-end
          %ul.navbar-nav
            - if user_signed_in?
              %li.nav-item
                = link_to("#{current_user.username}さんのマイページ", "/users/#{current_user.id}", {class: "nav-link"})
              %li.nav-item
                = link_to("助っ人を探す", maps_path, {class: "nav-link"})
              %li.nav-item
                = link_to("チャット", messages_path, {class: "nav-link"})
              %li.nav-item
                = link_to("ログアウト", destroy_user_session_path, {method: "delete", class: "nav-link"})
            - else
              %li.nav-item
                = link_to("会員登録", new_user_registration_path, {class: "nav-link"})
              %li.nav-item
                = link_to("ログイン", new_user_session_path, {class: "nav-link"})
    = yield
